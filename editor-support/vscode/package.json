{
	"name": "yatt-js",
	"displayName": "yatt-js",
	"description": "Language support for yatt-js",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
          "onLanguage:yatt-js",
          "onCommand:yatt-js.helloWorld"
	],
	"main": "./dist/extension-node",
	"browser": "./dist/extension-web",
	"contributes": {
		"languages": [
			{
				"id": "yatt-js",
				"aliases": [
				],
				"extensions": [
					".ytjs"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"themes": [
			{
				"label": "yatt default",
				"uiTheme": "vs",
				"path": "themes/yatt_default.json"
			}
		],
		"grammars": [
			{
				"language": "yatt-js",
				"scopeName": "text.html.yatt",
				"path": "./syntaxes/yatt-js.tmLanguage.json"
			},
			{
				"language": "yatt-js",
				"scopeName": "text.multipart.yatt",
				"path": "./syntaxes/yatt-js-multipart.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "yatt-js.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
		"pretest": "npm run compile-web",
		"vscode:prepublish": "npm run package-web",
		"compile-web": "webpack",
		"watch-web": "webpack --watch",
		"package-web": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/mocha": "^8.2.2",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"@vscode/test-web": "^0.0.8",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0",
		"@types/webpack-env": "^1.16.0",
		"assert": "^2.0.0",
		"process": "^0.11.10"
	}
}
